<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	android:weightSum="1">


	<ImageButton
        android:id="@+id/word_history_button"
        android:layout_width="95dp"
        android:layout_height="126dp"
        android:text="Word History"
        android:onClick="OpenNewActivity"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/owl"
		android:layout_marginTop="48dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="126dp"
		android:layout_marginStart="126dp" />
		<!-- <div>Icon made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed under <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a></div>-->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textAlignment="gravity"
		android:gravity="center"
		android:text="History"
		android:id="@+id/textView3"
		android:layout_gravity="center"
		android:layout_alignTop="@+id/textView4"
		android:layout_alignLeft="@+id/word_history_button"
		android:layout_alignEnd="@+id/word_history_button"
		android:layout_alignRight="@+id/word_history_button"/>

	<ImageButton
        android:id="@+id/map_discovery_button"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:text="Map Discovery"
		android:onClick="OpenNewActivity"
		android:background="@drawable/mao"
		android:layout_marginRight="123dp"
		android:layout_marginEnd="123dp"
		android:layout_alignBottom="@+id/word_history_button"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Map Discovery"
		android:id="@+id/textView4"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="45dp"
		android:layout_below="@+id/map_discovery_button"
		android:layout_alignRight="@+id/map_discovery_button"
		android:layout_alignEnd="@+id/map_discovery_button" />

</RelativeLayout>
